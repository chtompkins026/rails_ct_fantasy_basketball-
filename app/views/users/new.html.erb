<h3>Welcome to FF Basketball! Sign Up as new user below: </h3>
<p> Click the admin checkbox if you are going to be League Manager. There can only be one. </p>

<%= form_for(@user) do |u| %>
  <%= u.label :name %>
  <%= u.text_field :name %><br>

  <%= u.label :email %>
  <%= u.text_field :email %><br>

  <%= u.label :password %>
  <%= u.text_field :password %><br><br>

  <%= u.label :admin %>
  <%= u.check_box :admin %> <br><br>

  <%= u.submit %>
<% end %>
