<h1><%= @team.name %></h1>

<%= link_to "League Home", league_path(@league)%>

<table class="table table-hover players">
      <thead>
        <tr>
          <th> No. </th>
          <th> Name </th>
          <th> Team </th>
          <th> Position </th>
          <th> Projected Points </th>
          <th> Action </th>
        </tr>
      </thead>

      <tbody>
        <%@players.each_with_index do |player, index|%>
          <tr>
            <td> <%= index + 1%> </td>
            <td> <a href="/players/<%=player.id%>"><%=player.name%></a> </td>
            <td> <%= player.nba_team %>  </td>
            <td> <%=player.position %> </td>
            <td> <%= player.points %> </td> 
            <td> <%= link_to "Drop Player", player_path(player), method: :delete %> </a></td>
          </tr>
        <%end%>
      </tbody>
    </table>

  <% if @team.user_id = current_user %>
    <div id='add_player_button'>
      <%= link_to "Add Player", players_path(:league_id => @league, :team_id => @team.id) %>
    </div>
  <% end %>
